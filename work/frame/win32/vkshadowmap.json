{
    version: 2,
    engine: "Nebula",
    sub_script: true,
    framescript: {
        textures: [
            {
                name: "LocalLightShadow",
                format: "R32G32F",
                width: 512,
                height: 512,
                layers: 16,
                usage: "Render",
                type: "Texture2DArray"
            },
            {
                name: "SunShadow",
                format: "R16G16B16A16F",
                width: 1024,
                height: 1024,
                usage: "Render",
                type: "Texture2D"
            },
            {
                name: "SunDepth",
                format: "D32S8",
                width: 1024,
                height: 1024,
                usage: "Render",
                type: "Texture2D"
            }
        ]

        pass: {
            name: "SunShadowMapping",
            attachments: [
                {
                    name: "SunShadow",
                    clear: [ 1000, 1000, 0, 0 ],
                    store: true
                }
            ],

            "depth_stencil": {
                "name": "SunDepth",
                "store": true,
                "clear": 1
            },

            subpass: {
                name: "SunShadows",
                subpass_dependencies: [],
                attachments: [ "SunShadow" ],
                depth: true,
                call: {
                    name: "LightContext - Sun Shadows"
                }
            },
        },

        pass: {
            name: "LocalShadowMapping"
            attachments: [
                {
                    name: "LocalLightShadow",
                    clear: [ 1000, 1000, 0, 0 ],
                    store: true
                }
            ],
            subpass: {
                name: "SpotlightShadows",
                subpass_dependencies: [],
                attachments: [ "LocalLightShadow" ],
                depth: false,
                call: {
                    name: "LightContext - Spotlight Shadows"
                }
            }
        },

        call: {
            name: "LightContext - Spotlight Blur"
        }
    }
}